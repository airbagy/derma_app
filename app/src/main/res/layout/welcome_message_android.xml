<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/welcome_message_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/derma_project_bg"
        android:alpha="0.8"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/welcome_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="casual"
            android:text="Welcome to Project Derma"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:layout_below="@+id/welcome_title"
            android:text="Our app gives you a preliminary check on the condition of a mole to indiciate the possibility of skin cancer."
            android:textColor="#fff"
            android:textSize="18sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@drawable/round_btn"
            android:fontFamily="casual"
            android:onClick="mainGotoAbout"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="About"
            android:textColor="#fff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="casual"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom"
            android:background="@drawable/round_btn"
            android:onClick="dismissWelcomeMessageBox"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Got It"
            android:textColor="#fff" />
    </RelativeLayout>
</RelativeLayout>