<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow android:background="#aec" android:layout_marginTop="10dp">
                <RelativeLayout android:layout_width="match_parent">
                    <ImageButton
                        android:id="@+id/about_button"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentLeft="true"
                        android:background="@null"
                        android:backgroundTint="@android:color/transparent"
                        android:onClick="mainGotoAbout"
                        android:scaleType="fitCenter"
                        android:src="@drawable/infologo"
                        android:text="Info" />

                    <ImageButton
                        android:id="@+id/download"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:onClick="accessReceive"
                        android:scaleType="fitCenter"
                        android:src="@drawable/download"
                        android:textSize="30px" />
                </RelativeLayout>
            </TableRow>

            <TableRow android:background="#eec" android:layout_marginTop="10dp">

                <ImageButton
                    android:id="@+id/camera_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@null"
                    android:onClick="processCameraImage"
                    android:src="@drawable/rsz_camera" />
            </TableRow>

            <TableRow android:background="#eec" android:layout_marginTop="10dp">
                <Button
                    android:id="@+id/camera_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/button_border"
                    android:onClick="processCameraImage"
                    android:scaleType="fitCenter"
                    android:text="@string/camera"
                    android:textColor="@color/orange"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow android:background="#eec" android:layout_marginTop="10dp">
                <ImageButton
                    android:id="@+id/library_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@null"
                    android:onClick="accessLibrary"
                    android:scaleType="fitCenter"
                    android:src="@drawable/gallery_blue"
                    android:text="Library" />
            </TableRow>

            <TableRow android:background="#eec" android:layout_marginTop="10dp">
                <Button
                    android:id="@+id/library_button"
                    android:background="@drawable/button_border2"
                    android:onClick="accessLibrary"
                    android:scaleType="fitCenter"
                    android:src="@drawable/photo_library2"
                    android:text="Choose a photo"
                    android:textColor="@color/teal"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow android:background="#eec" android:layout_marginTop="10dp">
                <ImageButton
                    android:id="@+id/info_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@null"
                    android:backgroundTint="@android:color/transparent"
                    android:onClick="activateInfoPage"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bookicon" />
            </TableRow>

            <TableRow android:background="#eec" android:layout_marginTop="10dp">
                <Button
                    android:id="@+id/icon_button"
                    android:background="@drawable/button_border3"
                    android:onClick="activateInfoPage"
                    android:scaleType="fitCenter"
                    android:text="Read about Skin Cancer"
                    android:textColor="@color/purp"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow android:background="#eec" android:layout_marginTop="10dp">
                <ImageButton
                    android:id="@+id/info_icon2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@null"
                    android:backgroundTint="@android:color/transparent"
                    android:onClick="activateInfoPage"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bookicon" />
            </TableRow>

            <TableRow android:background="#eec" android:layout_marginTop="10dp">
                <Button
                    android:id="@+id/icon_button2"
                    android:background="@drawable/button_border3"
                    android:onClick="activateInfoPage"
                    android:scaleType="fitCenter"
                    android:text="Learn About Conditions"
                    android:textColor="@color/purp"
                    android:textSize="12sp" />
            </TableRow>

        </TableLayout>

    </ScrollView>
</LinearLayout>
