            android:background="@null"

            android:onClick="activateCamera"
            android:scaleType="fitCenter"
            android:src="@drawable/circle3__1562959607_97606__1562963806_16641" />


        <ImageButton
            android:id="@+id/library_button"
            android:layout_width="84dp"
            android:layout_height="72dp"
            android:layout_alignLeft="@id/camera_button"
            android:layout_alignBottom="@id/camera_button"
            android:layout_marginLeft="-44dp"
            android:layout_marginBottom="-79dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:onClick="accessLibrary"
            android:scaleType="fitCenter"
