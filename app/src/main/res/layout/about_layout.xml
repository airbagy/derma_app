<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/welcome_message_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/derma_project_bg"
        android:orientation="vertical"
        android:padding="16dp"
        android:alpha="0.8"
        android:visibility="visible">

        <TextView
            android:id="@+id/welcome_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="Project Derma"
            android:gravity="center"
            android:fontFamily="casual"
            android:textColor="#ffffff"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/welcome_title"
            android:text="By using this app, you are agreeing that you understand the app does not represent a diagnosis and that you understand all results are not proper diagnosis.\n\n\nStephen Lau\nLishi Wang\nDennis Duan\nOmar Qadri"
            android:textColor="#ffffff"
            android:fontFamily="casual"
            android:gravity="center_horizontal"
            android:textSize="18sp"/>
    </RelativeLayout>
</RelativeLayout>